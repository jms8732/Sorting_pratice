package sort_project;

import java.awt.Color;
import java.util.*;

public class PlaySort {
	private static Random rn;
	private static final int LEN = 1000;
	private static baseThread[] bt;

	public static void main(String[] args) {
		rn = new Random();

		Point[] array = new Point[LEN];
		boolean[] check = new boolean[LEN];

		for (int i = 0; i < LEN; i++) {
			int h = get_len(check);
			array[i] = new Point(h, Color.white);
		}

		init(array);
		
		Thread th = new Thread((CockTailThread)bt[4]);
		th.start();
	}

	private static void init(Point[] array) {
		bt = new baseThread[5];
		bt[0] = new BubbleThread(LEN, array, 0, 0);
		bt[1] = new SelectionThread(LEN, array, 700, 0);
		bt[2] = new InsertionThread(LEN, array, 0, 500);
		bt[3] = new MergeThread(LEN, array, 700, 500);
		bt[4] = new CockTailThread(LEN, array, 700, 1000);
	}

	private static int get_len(boolean[] check) {
		while (true) {
			int len = rn.nextInt(LEN);

			if (!check[len]) {
				check[len] = true;
				return len;
			}
		}
	}

}
