package sort_project;

import java.awt.Color;
import java.util.*;

/*
 * 버블 정렬
 * O(n^2) 의 시간이 걸린다.
 */
public class BubbleThread extends Thread {
	private Point[] array;
	private Board b;
	private long TIME = 1;

	public BubbleThread(Point[] array) {
		this.array = array;
		b = new Board(this.array);

	}

	public void run() {
		System.out.println("Start bubble Sort");
		for (int i = 0; i < array.length; i++) {
			for (int j = i + 1; j < array.length; j++) {
				if (array[i].y <array[j].y)  {

					array[i].color = Color.red;
					array[j].color = Color.red;

					b.repaint(array);
					sleep();
					
					int x_temp = array[i].x;
					int y_temp = array[i].y;
					
					array[i].x = array[j].x;
					array[i].y = array[j].y;
					
					array[j].x = x_temp;
					array[j].y = y_temp;

					b.repaint(array);
					sleep();
					array[i].color = Color.white;
					array[j].color = Color.white;

					b.repaint(array);
					sleep();
				}
			}
		}
	}

	private void sleep() {
		try {
			Thread.sleep(TIME);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}
}
